{
  "name": "second-brain-mcp",
  "version": "1.2.5",
  "description": "Model Context Protocol server for Building a Second Brain methodology",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:e2e:smoke": "jest --config=jest.e2e.config.js test/e2e/smoke",
    "test:mcp:quick": "tsx scripts/test-mcp-client.ts quick",
    "test:mcp:full": "tsx scripts/test-mcp-client.ts full",
    "test:mcp:scenario": "tsx scripts/test-mcp-client.ts scenario",
    "test:mcp:oauth": "tsx scripts/test-mcp-with-oauth.ts",
    "test:e2e:full": "jest --config=jest.e2e.config.js test/e2e/full-flow.e2e.ts",
    "mock:oauth": "tsx scripts/mock-oauth-server.ts",
    "inspect": "tsx scripts/mcp-inspector.ts",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "release": "tsx scripts/release.ts",
    "release:patch": "tsx scripts/release.ts patch",
    "release:minor": "tsx scripts/release.ts minor",
    "release:major": "tsx scripts/release.ts major"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "second-brain",
    "basb",
    "knowledge-management",
    "cloudflare-workers"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@cloudflare/workers-oauth-provider": "^0.0.11",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@octokit/rest": "^22.0.0",
    "arctic": "^3.7.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251004.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "chalk": "5",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "node-fetch": "3",
    "open": "^10.2.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.0"
  }
}
